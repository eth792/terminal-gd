{
  "name": "rpa-automation-tool",
  "version": "1.0.0",
  "description": "RPA自动化工具 - 跨平台桌面应用程序",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:vite\" \"pnpm run build:watch\" \"pnpm run electron:dev\"",
    "dev:vite": "vite --port 3000",
    "build": "pnpm run build:renderer && pnpm run build:main",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:watch:renderer": "vite build --watch",
    "build:watch": "tsc -p tsconfig.main.json --watch",
    "electron:dev": "wait-on dist/main.js && node scripts/start-electron.js",
    "electron:pack": "electron-builder",
    "dist": "pnpm run build && electron-builder --publish=never",
    "electron:start": "NODE_ENV=production node scripts/start-electron.js",
    "start": "pnpm run dev",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "clean": "rimraf dist build node_modules/.cache",
    "setup": "node scripts/dev-setup.js",
    "validate": "node scripts/validate-app.js",
    "postinstall": "electron-builder install-app-deps",
    "pack:mac": "rm -rf dist && rm -rf build && pnpm run build &&  electron-builder --mac",
    "pack:win": "rmdir /s /q dist 2>nul & rmdir /s /q build 2>nul & set  && pnpm run build && electron-builder --win"
  },
  "keywords": [
    "rpa",
    "automation",
    "electron",
    "desktop"
  ],
  "author": "RPA Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "electron": "^38.1.2",
    "electron-builder": "^24.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0",
    "vite": "^4.4.0",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0",
    "electron-log": "^5.1.0"
  },
  "build": {
    "appId": "com.rpa.automation.tool",
    "productName": "RPA自动化工具",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!node_modules/*/{CHANGELOG.md,README.md,readme.md,readme.txt,README.txt,LICENSE,license,LICENSE.txt,license.txt}"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}