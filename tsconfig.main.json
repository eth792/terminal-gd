{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "noEmit": false,
    "outDir": "dist",
    "jsx": "preserve",
    "types": ["node"],
    "lib": ["ES2020"]
  },
  "include": [
    "src/main/**/*"
  ],
  "exclude": [
    "src/renderer/**/*",
    "node_modules",
    "build"
  ]
}