{
  "name": "@ocr/core",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "ocr-core": "./dist/cli/match-ocr.js",
    "ocr-build-index": "./dist/cli/build-index.js",
    "ocr-eval": "./dist/cli/eval-sidecar.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli/build-index.ts src/cli/match-ocr.ts src/cli/eval-sidecar.ts --format esm --dts --sourcemap --clean",
    "dev": "pnpm build && node --enable-source-maps dist/cli/match-ocr.js",
    "build-index": "node --enable-source-maps dist/cli/build-index.js",
    "match-ocr": "node --enable-source-maps dist/cli/match-ocr.js",
    "eval": "node --enable-source-maps dist/cli/eval-sidecar.js",
    "test:full": "pnpm build && node --enable-source-maps dist/cli/match-ocr.js --ocr ../../data/ocr_txt --index ../../data/index/index_p0_v3.json --out ../../runs/run_{timestamp} --config ../.. --db ../../data/db --topk 3",
    "test:quick": "pnpm build && node --enable-source-maps dist/cli/match-ocr.js --ocr ../../data/ocr_txt --index ../../data/index/index_p0_v3.json --out ../../runs/run_{timestamp} --config ../.. --allow-stale-index --autoPass 0.7 --minFieldSim 0.6 --minDeltaTop 0.03 --topk 3",
    "test:custom": "pnpm build && node --enable-source-maps dist/cli/match-ocr.js",
    "sample": "node ../../scripts/sample-test-cases.js ../../runs/run_latest",
    "sample-internal": "pnpm sample && pnpm build && pnpm match-ocr --ocr ../../data/ocr_txt --index ../../data/index/index_p0_v3.json --out ../../runs/run_sample_{timestamp} --config ../.. --db ../../data/db --files ../../runs/tmp/sample_files.txt --autoPass 0.7 --minFieldSim 0.6 --minDeltaTop 0.03 --topk 3",
    "test:sample": "bash ../../scripts/run-sample-test.sh"
  },
  "dependencies": {
    "csv-stringify": "^6.5.2",
    "dayjs": "^1.11.13",
    "fastest-levenshtein": "^1.0.16",
    "iconv-lite": "^0.6.3",
    "xlsx": "^0.18.5",
    "yargs": "^17.7.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/yargs": "^17.0.34",
    "tsup": "^8.1.0",
    "typescript": "^5.6.3"
  }
}
